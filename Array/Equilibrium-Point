class Solution {
  public:
    int findEquilibrium(vector<int> &arr) {
       
        int n=arr.size();
        int total =0;
        for(int x : arr)
        {
            total+=x;
        }
        int leftSum =0;
        for(int i=0; i<n;i++)
        {
            total-=arr[i];
            
            if(leftSum == total)
            {
                return i;
            }
            leftSum+=arr[i];
        }
        return -1;
    }
    
};
