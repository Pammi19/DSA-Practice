class Solution {
  public:
    int maxSubarraySum(vector<int> &arr) {
       
        int maxSum = arr[0];      
        int Sum = arr[0]; 
        
        for(int i = 1; i < arr.size(); i++) {
            Sum = max(arr[i], Sum + arr[i]);
            maxSum = max(maxSum, Sum);
        }
     
        return maxSum;
    }
};
    
